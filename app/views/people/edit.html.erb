<% provide(:title, 'Change Password') %>

<h1>Change <%=@person.name%>'s password:</h1>

<%= form_for(@person) do |p| %>

	<%= render 'shared/error_messages', object_to_check: @person %>

	<%= render 'password_fields', password_fields: p %>

	<%= p.submit "Apply changes", class: "btn btn-large btn-primary" %>

<% end %>
