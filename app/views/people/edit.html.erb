<% provide(:title, 'Edit A Person') %>

<h1>Edit an existing person</h1>

<%= form_for(@person) do |p| %>

	<%= render partial: 'shared/error_messages', object: @person %>

	<%= render partial: 'person_field', object: p %>

	<%= p.submit "Apply changes", class: "btn btn-large btn-primary" %>

<% end %>
