<% provide(:title, @person.name) %>
<h1><%= @person.name %></h1>

<h2><%= @person.name %>'s Deeds:

<% if @person.deeds.length == 0 %>
	None</h2>

<% else %>
	</h2>

	<table border="1">
		<tr>
			<th>ID</th>
			<th>Activity</th>
			<th>Created</th>
			<th>Modified</th>
		</tr>

		<% @person.deeds.each do |p| %>
		<tr>
			<td><%= p.id %></td>
			<td><%= link_to p.activity.name, activity_path(p.activity.id) %></td>
			<td><%= p.created_at %></td>
			<td><%= p.updated_at %></td>
		</tr>
		<% end %>

	</table>
<% end %>

<br>
<a href="/people">Show all people</a> &nbsp; | &nbsp; <%= link_to "Delete this person", @person, method: :delete, data: { confirm: "Are you sure?" } %> &nbsp; | &nbsp; <%= link_to "Edit this person", edit_person_path(@person) %>

<%= button_to "Show all people", { :deed => "index" }, { :method => :get } %>
<%= button_to "Delete this person", { :deed => "destroy", :id => @person.id }, { :confirm => "Are you sure?", :method => :delete } %>

<%= submit_tag "Test me!", :type => 'button', :onclick => 'alert("It works!")' %>
