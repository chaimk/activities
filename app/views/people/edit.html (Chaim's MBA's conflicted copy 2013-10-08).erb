<% provide(:title, 'Edit a Person') %>

<h1>Edit an existing person</h1>

<%= form_for(@person) do |t| %>

	<%= render 'shared/error_messages' %>

	<%= t.label :name %>
	<%= t.text_field :name %>

	<%= t.label :password %>
	<%= t.text_field :password %>

	<%= t.submit "Apply changes", class: "btn btn-large btn-primary" %>

<% end %>
