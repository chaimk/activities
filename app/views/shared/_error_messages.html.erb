<% if @activity.errors.any? %> 
	<div id="error_explanation">
		<div class="alert alert-error">
			The form contains <%= pluralize(@activity.errors.count, "error") %>:
		</div>
		<ul>
			<% @activity.errors.full_messages.each do |msg| %>
			<li><%= msg %></li> 
			<% end %>
		</ul>
		<p>Please correct the error(s) and resubmit the form.</p><br>
	</div> 
<% end %>