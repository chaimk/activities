<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Activities App", '#', id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li>
						<% if signed_in? %>
							<% store_location %>
							<%= link_to "Sign out", signout_path, method: "delete" %>
							<li id="fat-menu" class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= current_person.name %>'s Account <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><%= link_to "Profile", current_person %></li> 
									<li><%= link_to "Settings", '#' %></li>
									<li class="divider"></li>
									<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
								</ul> 
							</li>
						<% elsif request.fullpath != "/signin" %>
							<% store_location %>
							<%= link_to "Sign in", signin_path %>
						<% end %>
					</li>
					<li><%= link_to "Home", 'people' %></li> 
				</ul>
			</nav>
		</div>
	</div>
</header>
