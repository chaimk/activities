<% provide(:title, 'Show All Activites') %>
<h1>List of All Activities</h1>

<table border="1" cellpadding="4" cellspacing="0">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Category</th>
		<th>Points</th>
		<th># of Times</th>
		<th>Created</th>
		<th>Modified</th>
	</tr>

	<% @activities.each do |t| %>
	<tr>
		<td><%= t.id %></td>
		<td><%= link_to t.name, activity_path(t.id) %></td>
		<td><%= t.category %></td>
		<td><%= t.points %></td>
		<td><%= t.actions.length %></td>
		<td><%= t.created_at %></td>
		<td><%= t.updated_at %></td>
	</tr>
	<% end %>

</table>

